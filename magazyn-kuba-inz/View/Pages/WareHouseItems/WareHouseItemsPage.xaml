<service:BaseControlPage 
      x:TypeArguments="pageVM:WareHouseItemsPageViewModel"
      x:Class="magazyn_kuba_inz.View.Pages.WareHouseItemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:magazyn_kuba_inz.View.Pages"
      xmlns:service="clr-namespace:magazyn_kuba_inz.View.Service"
      xmlns:pageVM="clr-namespace:magazyn_kuba_inz.Core.ViewModel.Pages;assembly=magazyn_kuba_inz.Core"
      mc:Ignorable="d" 
      CanResize="CanResizeWithGrip"
      d:DataContext="{d:DesignInstance Type=pageVM:WareHouseItemsPageViewModel}"
      d:DesignHeight="500" d:DesignWidth="1000"
      Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!--#region Top Panel-->
        
        <StackPanel Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0,5">

        </StackPanel>

        <!--#endregion-->

        <!--#region Items -->

        <Grid Grid.Row="1"
              Grid.Column="0">
            <DataGrid IsSynchronizedWithCurrentItem="True"
                      SelectionMode="Extended"
                      ItemsSource="{Binding Items}"
                      SelectedItem="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged}"
                      AutoGenerateColumns="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nazwa produktu"
                                        Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Opis produktu"
                                        Width="*"
                                        Binding="{Binding Description}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!--#endregion-->

        <GridSplitter Grid.Row="1" 
                      Grid.Column="1"
                      Width="2"
                      Margin="2,0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      ShowsPreview="False"
                      Background="{StaticResource DarkColorBrush}"
                      />

        <!--#region Selected item-->

        <Grid Grid.Row="1"
              Visibility="{Binding WareHouseProductItemViewModel, Converter={StaticResource NullToVisible}}"
              Grid.Column="2">
            <local:ProductWareHouseItemsView DataContext="{Binding WareHouseProductItemViewModel}"/>
        </Grid>

        <!--#endregion-->

    </Grid>
</service:BaseControlPage>
