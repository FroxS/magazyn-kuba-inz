<Window x:Class="magazyn_kuba_inz.View.Dialog.BaseDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:magazyn_kuba_inz.View.Dialog"
        mc:Ignorable="d"
        Title="BaseDialogWindow" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding OKCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"/>
        <KeyBinding Key="Esc" Command="{Binding ExitCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"/>
    </Window.InputBindings>
    <Grid>
        <ContentControl Margin="5" Grid.Row="1" x:Name="ControlPresenter" Content="{Binding}"/>
    </Grid>
</Window>
