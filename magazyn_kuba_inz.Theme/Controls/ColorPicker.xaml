<UserControl x:Class="Warehouse.Theme.Controls.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Warehouse.Theme.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Button Name="btnPicker"
                Height="{Binding Height, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                Click="OpenColorDialog_Click"  />
    </Grid>
</UserControl>
